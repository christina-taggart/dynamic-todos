<ul>
  <% @todos.each do |todo| %>
    <li>
      <input class="complete" value="/todo/<%= todo.id %>" type="checkbox" name="completed" <% if todo.completed %>checked<% end %> />
      <%= todo.todo_content %>
      <form class="delete" action="/todo/<%= todo.id %>">
        <input type="submit" value="Delete">
      </form>
    </li>
  <% end %>
</ul>