<div id="todo">
  <div class="toolbox">
    <form action="/add_todo" method="post">
      <input type="text" class="todo" name="todo_content" placeholder="Enter your new to do here!"/>
      <input type="submit" value="Add Todo"/>
    </form>
  </div>

  <div class="todo_list">
    <% @todos.each do |todo| %>
      <div id="todo_template">
        <div class="todo">
          <h2 class="todo_name"><%= todo.todo_content %></h2>
          <ul>
            <li><a href="#" class="delete">Delete</a></li>
            <li><a href="#" class="complete">Complete</a></li>
          </ul>
        </div>
      </div> 
    <% end %>
  </div>
</div>
