<div id="todo">
  <div class="toolbox">
    <form id="add_todo" action="/add_todo" method="post">
      <input id="todo_input" type="text" class="todo" placeholder="Put your todo item here!"/>
      <input type="submit" value="Add Todo"/>
      <!-- <button class="add" type="submit">Add Todo</button> -->
    </form>
  </div>

  <div class="todo_list">
    <% @todos.each do |todo| %>
        <div class="todo">
          <h2 id="todo_title"><%= todo.todo_content %></h2>
          <ul>
            <li><a href="#" class="delete">Delete</a></li>
            <li><a href="#" class="complete">Complete</a></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>

  <div id="todo_template" style="display:none">
    <div class="todo">
      <h2 id="todo_title"></h2>
      <ul>
        <li><a href="#" class="delete">Delete</a></li>
        <li><a href="#" class="complete">Complete</a></li>
      </ul>
    </div>
  </div>
</div>
